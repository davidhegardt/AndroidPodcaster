<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dahe0070.androidpodcaster.RadioFragment">

    <ListView
        android:id="@+id/listStations"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:listSelector="@drawable/list_selector"
        android:divider="#b5b5b5"
        android:dividerHeight="2dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/gradient_bg"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/linearLayoutStation"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        >

    <TextView
        android:id="@+id/txtCurrStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/now_playing" />

        <ImageButton
            android:id="@+id/btnCurrPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCurrStation"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_pause_circle_outline_white_48dp" />

        <ImageView
            android:id="@+id/imgAudioAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/animation_list_audio"
            android:layout_alignBottom="@+id/btnCurrPlay"
            android:layout_marginLeft="250dp"
             />

    </RelativeLayout>

</RelativeLayout>
