<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_selector"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/linearLayoutStation">

        <ImageButton
            android:id="@+id/imgStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/dummy_radio" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/linearLayoutStation"
        android:text="@string/stations_namn"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnPlayStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStationName"
        android:layout_toEndOf="@+id/linearLayoutStation"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_play_circle_filled_white_48dp" />
</RelativeLayout>